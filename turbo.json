{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DATABASE_URL",
    "CORS_WHITE_LIST_URLS",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_JWT_EXPIRE_TIME",
    "GOOGLE_ID",
    "GOOGLE_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
